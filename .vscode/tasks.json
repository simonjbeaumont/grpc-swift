
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "swift build --build-tests --enable-test-discovery -Xswiftc -Xfrontend -Xswiftc -serialize-debugging-options",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "instanceLimit": 1,
            },
        },
        {
            "label": "test",
            "type": "shell",
            "command": "swift test --enable-test-discovery -Xswiftc -Xfrontend -Xswiftc -serialize-debugging-options",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "swift run"
        }
    ]
}